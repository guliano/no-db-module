{
    "name": "guliano/no-db-module",
    "description": "Simple ZF2 Module for nice DB Connection error handling",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "zf2",
        "zend",
        "mail"
    ],
    "require": {
        "php": ">=5.4.0",
        "zendframework/zend-servicemanager": "~2.3",
        "zendframework/zend-mvc": "~2.3",
        "zendframework/zend-modulemanager": "~2.3",
        "zendframework/zend-view": "~2.3",
        "doctrine/orm": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "squizlabs/php_codesniffer": "~2.0",
        "satooshi/php-coveralls": "0.6.*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "NoDbModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NoDbModuleTest\\": "test/"
        }
    }
}